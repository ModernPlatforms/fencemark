@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <MudContainer MaxWidth="MaxWidth.Small" Style="margin-top: 3rem; text-align: center;">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
            <MudText Typo="Typo.h6" Style="margin-top: 1rem;">Signing you in...</MudText>
        </MudContainer>
    </LoggingIn>
    
    <CompletingLoggingIn>
        <MudContainer MaxWidth="MaxWidth.Small" Style="margin-top: 3rem; text-align: center;">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
            <MudText Typo="Typo.h6" Style="margin-top: 1rem;">Completing sign in...</MudText>
        </MudContainer>
    </CompletingLoggingIn>
    
    <LogOut>
        <MudContainer MaxWidth="MaxWidth.Small" Style="margin-top: 3rem; text-align: center;">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
            <MudText Typo="Typo.h6" Style="margin-top: 1rem;">Signing you out...</MudText>
        </MudContainer>
    </LogOut>
    
    <CompletingLogOut>
        <MudContainer MaxWidth="MaxWidth.Small" Style="margin-top: 3rem; text-align: center;">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
            <MudText Typo="Typo.h6" Style="margin-top: 1rem;">Completing sign out...</MudText>
        </MudContainer>
    </CompletingLogOut>
    
    <LogInFailed>
        <MudContainer MaxWidth="MaxWidth.Small" Style="margin-top: 3rem;">
            <MudAlert Severity="Severity.Error">
                <MudText Typo="Typo.h6" GutterBottom="true">Sign In Failed</MudText>
                <MudText>There was a problem signing you in. Please try again.</MudText>
                <MudText Typo="Typo.body2" Style="margin-top: 1rem;">@context</MudText>
            </MudAlert>
            <div style="text-align: center; margin-top: 2rem;">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="authentication/login">
                    Try Again
                </MudButton>
                <MudButton Variant="Variant.Text" Href="/" Style="margin-left: 1rem;">
                    Go Home
                </MudButton>
            </div>
        </MudContainer>
    </LogInFailed>
    
    <LogOutFailed>
        <MudContainer MaxWidth="MaxWidth.Small" Style="margin-top: 3rem;">
            <MudAlert Severity="Severity.Error">
                <MudText Typo="Typo.h6" GutterBottom="true">Sign Out Failed</MudText>
                <MudText>There was a problem signing you out. Please try again.</MudText>
                <MudText Typo="Typo.body2" Style="margin-top: 1rem;">@context</MudText>
            </MudAlert>
            <div style="text-align: center; margin-top: 2rem;">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="authentication/logout">
                    Try Again
                </MudButton>
                <MudButton Variant="Variant.Text" Href="/" Style="margin-left: 1rem;">
                    Go Home
                </MudButton>
            </div>
        </MudContainer>
    </LogOutFailed>
</RemoteAuthenticatorView>

@code {
    [Parameter]
    public string? Action { get; set; }
}
