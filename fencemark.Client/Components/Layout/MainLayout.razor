@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1" Dense="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3">
            <MudIcon Icon="@Icons.Material.Filled.Fence" /> Fencemark
        </MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText Typo="Typo.body2" Class="mr-4">@context.User.Identity?.Name</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="authentication/logout" StartIcon="@Icons.Material.Filled.Logout">Sign Out</MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="authentication/login" StartIcon="@Icons.Material.Filled.Login">Sign In</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" ClipMode="DrawerClipMode.Always">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <AuthorizeView>
                <Authorized>
                    <MudNavLink Href="/jobs" Icon="@Icons.Material.Filled.Work">Jobs</MudNavLink>
                    <MudNavLink Href="/components" Icon="@Icons.Material.Filled.ViewInAr">Components</MudNavLink>
                    <MudNavLink Href="/fences" Icon="@Icons.Material.Filled.Fence">Fences</MudNavLink>
                    <MudNavLink Href="/gates" Icon="@Icons.Material.Filled.DoorFront">Gates</MudNavLink>
                </Authorized>
            </AuthorizeView>
        </MudNavMenu>
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 mb-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
