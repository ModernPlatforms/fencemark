@page "/logout"
@using fencemark.Web.Features.Auth
@inject AuthApiClient AuthApi
@inject NavigationManager Navigation

<PageTitle>Logout</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <h3>Signing Out</h3>
                </div>
                <div class="card-body text-center">
                    @if (isLoggingOut)
                    {
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Signing you out...</p>
                    }
                    else if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                        <a href="/" class="btn btn-primary">Go to Home</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isLoggingOut = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var success = await AuthApi.LogoutAsync();
            if (success)
            {
                // Force a full page reload to update authentication state
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = "Failed to logout. Please try again.";
                isLoggingOut = false;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
            isLoggingOut = false;
        }
    }
}
