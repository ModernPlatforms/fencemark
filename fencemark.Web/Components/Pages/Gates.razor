@page "/gates"
@using fencemark.Web.Features.Gates
@using Microsoft.AspNetCore.Authorization
@inject GateApiClient GateClient
@inject NavigationManager Navigation
@inject Microsoft.JSInterop.IJSRuntime JSRuntime
@attribute [Authorize]

<PageTitle>Gate Types - Fencemark</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-door-closed"></i> Gate Types</h2>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            <i class="bi bi-plus-circle"></i> Add Gate Type
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading gate types...</p>
        </div>
    }
    else if (gates == null || !gates.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No gate types found. Create your first gate type to get started!
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var gate in gates)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card gate-card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@gate.Name</h5>
                            <p class="card-text text-muted">@gate.Description</p>
                            <div class="gate-details">
                                <div class="detail-item">
                                    <strong>Width:</strong> @gate.WidthInFeet ft
                                </div>
                                <div class="detail-item">
                                    <strong>Height:</strong> @gate.HeightInFeet ft
                                </div>
                                <div class="detail-item">
                                    <strong>Material:</strong> @gate.Material
                                </div>
                                <div class="detail-item">
                                    <strong>Style:</strong> @gate.Style
                                </div>
                                <div class="detail-item price">
                                    <strong>Price:</strong> $@gate.BasePrice.ToString("F2")
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <button class="btn btn-outline-primary" @onclick="() => EditGate(gate)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-outline-danger" @onclick="() => DeleteGate(gate)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingGate?.Id == null ? "Create" : "Edit") Gate Type</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Name *</label>
                        <input type="text" class="form-control" @bind="editingGate.Name" placeholder="e.g., Single Walk Gate" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" @bind="editingGate.Description" rows="3" placeholder="Detailed description of the gate type"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Width (feet) *</label>
                            <input type="number" step="0.1" class="form-control" @bind="editingGate.WidthInFeet" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Height (feet) *</label>
                            <input type="number" step="0.1" class="form-control" @bind="editingGate.HeightInFeet" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Base Price *</label>
                            <input type="number" step="0.01" class="form-control" @bind="editingGate.BasePrice" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Material</label>
                            <select class="form-select" @bind="editingGate.Material">
                                <option value="">Select material...</option>
                                <option value="Wood">Wood</option>
                                <option value="Vinyl">Vinyl</option>
                                <option value="Metal">Metal</option>
                                <option value="Aluminum">Aluminum</option>
                                <option value="Steel">Steel</option>
                                <option value="Composite">Composite</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Style</label>
                            <select class="form-select" @bind="editingGate.Style">
                                <option value="">Select style...</option>
                                <option value="Walk-through">Walk-through</option>
                                <option value="Drive-through">Drive-through</option>
                                <option value="Pedestrian">Pedestrian</option>
                                <option value="Double">Double</option>
                                <option value="Sliding">Sliding</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveGate" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .gate-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #e0e0e0;
    }

    .gate-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .gate-details {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #e0e0e0;
    }

    .detail-item {
        margin-bottom: 8px;
        padding: 4px 0;
    }

    .detail-item.price {
        font-size: 1.1rem;
        color: #28a745;
    }
</style>

@code {
    private List<GateTypeDto>? gates;
    private GateTypeDto editingGate = new() { Name = "", OrganizationId = "" };
    private bool isLoading = true;
    private bool isSaving = false;
    private bool showModal = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadGates();
    }

    private async Task LoadGates()
    {
        isLoading = true;
        try
        {
            var result = await GateClient.GetAllAsync();
            gates = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading gates: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        editingGate = new GateTypeDto { Name = "", OrganizationId = "" };
        errorMessage = null;
        showModal = true;
    }

    private void EditGate(GateTypeDto gate)
    {
        editingGate = new GateTypeDto
        {
            Id = gate.Id,
            Name = gate.Name,
            Description = gate.Description,
            WidthInFeet = gate.WidthInFeet,
            HeightInFeet = gate.HeightInFeet,
            Material = gate.Material,
            Style = gate.Style,
            BasePrice = gate.BasePrice,
            OrganizationId = gate.OrganizationId
        };
        errorMessage = null;
        showModal = true;
    }

    private async Task SaveGate()
    {
        if (string.IsNullOrWhiteSpace(editingGate.Name))
        {
            errorMessage = "Name is required";
            return;
        }

        isSaving = true;
        errorMessage = null;

        try
        {
            if (string.IsNullOrEmpty(editingGate.Id))
            {
                await GateClient.CreateAsync(editingGate);
            }
            else
            {
                await GateClient.UpdateAsync(editingGate.Id, editingGate);
            }

            await LoadGates();
            CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving gate: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteGate(GateTypeDto gate)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{gate.Name}'?"))
            return;

        try
        {
            await GateClient.DeleteAsync(gate.Id);
            await LoadGates();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting gate: {ex.Message}";
        }
    }

    private void CloseModal()
    {
        showModal = false;
        editingGate = new() { Name = "", OrganizationId = "" };
        errorMessage = null;
    }
}
