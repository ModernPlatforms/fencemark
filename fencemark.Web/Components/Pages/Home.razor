@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Fencemark - Professional Fence Management</PageTitle>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 20px;
        border-radius: 12px;
        margin-bottom: 40px;
    }
</style>

<div class="hero-section">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h2" Class="mb-4 fw-bold">
                <MudIcon Icon="@Icons.Material.Filled.Fence" Size="Size.Large" /> Fencemark
            </MudText>
            <MudText Typo="Typo.h6" Class="mb-4" Style="opacity: 0.95;">
                Professional fence and gate management made simple. Estimate jobs, track components, manage inventory, and deliver accurate quotes to your customers.
            </MudText>
            
            <AuthorizeView>
                <Authorized>
                    <MudStack Row="true" Spacing="3" Class="mt-4">
                        <MudButton Variant="Variant.Filled" Color="Color.Surface" Size="Size.Large" Href="/fences" StartIcon="@Icons.Material.Filled.Fence">
                            Manage Fences
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Surface" Size="Size.Large" Href="/jobs" StartIcon="@Icons.Material.Filled.Work">
                            View Jobs
                        </MudButton>
                    </MudStack>
                </Authorized>
                <NotAuthorized>
                    <MudStack Row="true" Spacing="3" Class="mt-4">
                        <MudButton Variant="Variant.Filled" Color="Color.Surface" Size="Size.Large" Href="MicrosoftIdentity/Account/SignIn" StartIcon="@Icons.Material.Filled.Login">
                            Sign In
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Surface" Size="Size.Large" Href="#features">
                            Learn More
                        </MudButton>
                    </MudStack>
                </NotAuthorized>
            </AuthorizeView>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex align-center justify-center">
            <svg viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg" style="max-width: 100%; height: auto;">
                <defs>
                    <linearGradient id="woodGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                        <stop offset="0%" style="stop-color:#8B4513;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#654321;stop-opacity:1" />
                    </linearGradient>
                    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                        <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#E0F6FF;stop-opacity:1" />
                    </linearGradient>
                </defs>
                <rect width="400" height="200" fill="url(#skyGradient)"/>
                <rect y="200" width="400" height="100" fill="#90EE90"/>
                <rect x="50" y="150" width="15" height="120" fill="url(#woodGradient)" rx="2"/>
                <rect x="110" y="150" width="15" height="120" fill="url(#woodGradient)" rx="2"/>
                <rect x="170" y="150" width="15" height="120" fill="url(#woodGradient)" rx="2"/>
                <rect x="230" y="150" width="15" height="120" fill="url(#woodGradient)" rx="2"/>
                <rect x="290" y="150" width="15" height="120" fill="url(#woodGradient)" rx="2"/>
                <rect x="40" y="170" width="270" height="12" fill="#A0522D" rx="2"/>
                <rect x="40" y="210" width="270" height="12" fill="#A0522D" rx="2"/>
                <rect x="40" y="250" width="270" height="12" fill="#A0522D" rx="2"/>
                <g>
                    <rect x="330" y="160" width="50" height="100" fill="none" stroke="#654321" stroke-width="3"/>
                    <line x1="330" y1="185" x2="380" y2="185" stroke="#654321" stroke-width="2"/>
                    <line x1="330" y1="210" x2="380" y2="210" stroke="#654321" stroke-width="2"/>
                    <line x1="330" y1="235" x2="380" y2="235" stroke="#654321" stroke-width="2"/>
                    <circle cx="340" cy="210" r="3" fill="#FFD700"/>
                </g>
                <circle cx="350" cy="50" r="25" fill="#FFD700"/>
                <ellipse cx="80" cy="40" rx="20" ry="12" fill="white" opacity="0.8"/>
                <ellipse cx="95" cy="40" rx="25" ry="15" fill="white" opacity="0.8"/>
                <ellipse cx="65" cy="40" rx="18" ry="10" fill="white" opacity="0.8"/>
            </svg>
        </MudItem>
    </MudGrid>
</div>

<div id="features">
    <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-6">Everything You Need to Manage Your Fence Business</MudText>
    
    <MudGrid>
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="pa-4 h-100">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Fence" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Fence Management</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Create and manage different fence types with customizable components and pricing. Track materials and specifications for accurate estimates.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="pa-4 h-100">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.DoorFront" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Gate Catalog</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Maintain a comprehensive catalog of gate styles, components, and pricing. Quickly add gates to any fence project.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="pa-4 h-100">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Work" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Job Tracking</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Create new jobs, generate quotes, and track project progress. Keep all your fence installation projects organized.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="pa-4 h-100">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.ViewInAr" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Component Library</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Build a library of posts, rails, panels, and hardware. Update prices and specifications in one place.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="pa-4 h-100">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Calculate" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Accurate Pricing</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Automatic cost calculations based on your component library. Generate professional quotes with confidence.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="pa-4 h-100">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Shield" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Secure & Reliable</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Enterprise-grade security with Azure authentication. Your data is safe and always available.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</div>

