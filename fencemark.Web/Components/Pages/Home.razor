@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Fencemark - Professional Fencing Planning Software</PageTitle>

<!-- Modern Hero Section -->
<div class="modern-hero">
    <div class="modern-hero-content">
        <div class="flex flex-col items-center text-center">
            <div class="mb-6 flex items-center gap-2 rounded modern-badge modern-badge-secondary" style="padding: 0.5rem 1rem; background: rgba(255, 255, 255, 0.2);">
                <span class="pulse-dot"></span>
                <span style="color: white;">Trusted by fencing professionals across Australia</span>
            </div>
            <h1 class="mb-6 text-4xl font-bold leading-tight text-balance" style="color: white; max-width: 900px; font-size: clamp(2rem, 5vw, 3.5rem);">
                Professional Planning Software for Australian Fencing
            </h1>
            <p class="mb-8 text-lg leading-relaxed" style="color: rgba(255, 255, 255, 0.9); max-width: 700px; font-size: clamp(1rem, 2vw, 1.25rem);">
                Streamline your fencing projects from quote to completion. Manage jobs, components, fences, and gates all in one powerful platform.
            </p>
            
            <AuthorizeView>
                <Authorized>
                    <div class="flex flex-col gap-4" style="flex-direction: row; flex-wrap: wrap; justify-content: center;">
                        <a href="/fences" class="modern-btn modern-btn-lg" style="background: white; color: #667eea;">
                            <MudIcon Icon="@Icons.Material.Filled.Fence" Size="Size.Small" />
                            Manage Fences
                        </a>
                        <a href="/jobs" class="modern-btn modern-btn-lg modern-btn-outline" style="border-color: white; color: white;">
                            <MudIcon Icon="@Icons.Material.Filled.Work" Size="Size.Small" />
                            View Jobs
                        </a>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="flex flex-col gap-4" style="flex-direction: row; flex-wrap: wrap; justify-content: center;">
                        <a href="MicrosoftIdentity/Account/SignIn" class="modern-btn modern-btn-lg" style="background: white; color: #667eea;">
                            <MudIcon Icon="@Icons.Material.Filled.Login" Size="Size.Small" />
                            Sign In with Entra
                        </a>
                        <a href="#features" class="modern-btn modern-btn-lg modern-btn-outline" style="border-color: white; color: white;">
                            Learn More
                        </a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>

<!-- Features Section -->
<div id="features" class="modern-section">
    <div class="modern-container">
        <h2 class="modern-section-title">Everything You Need to Manage Fencing Projects</h2>
        <p class="modern-section-description">
            Purpose-built tools for fencing professionals to increase efficiency and accuracy
        </p>
        
        <div class="modern-grid modern-grid-cols-4">
            <div class="modern-card">
                <div class="modern-icon-container modern-icon-container-primary">
                    <MudIcon Icon="@Icons.Material.Filled.Work" Size="Size.Large" />
                </div>
                <h3 class="modern-card-title">Job Management</h3>
                <p class="text-muted leading-relaxed text-sm">
                    Track all your fencing projects from quote to completion with comprehensive job management tools
                </p>
            </div>
            
            <div class="modern-card">
                <div class="modern-icon-container modern-icon-container-accent">
                    <MudIcon Icon="@Icons.Material.Filled.ViewInAr" Size="Size.Large" />
                </div>
                <h3 class="modern-card-title">Component Library</h3>
                <p class="text-muted leading-relaxed text-sm">
                    Maintain a detailed inventory of posts, panels, rails, and all fencing components with pricing
                </p>
            </div>
            
            <div class="modern-card">
                <div class="modern-icon-container modern-icon-container-primary">
                    <MudIcon Icon="@Icons.Material.Filled.Fence" Size="Size.Large" />
                </div>
                <h3 class="modern-card-title">Fence Planning</h3>
                <p class="text-muted leading-relaxed text-sm">
                    Design and plan fence installations with precise measurements and material calculations
                </p>
            </div>
            
            <div class="modern-card">
                <div class="modern-icon-container modern-icon-container-accent">
                    <MudIcon Icon="@Icons.Material.Filled.DoorFront" Size="Size.Large" />
                </div>
                <h3 class="modern-card-title">Gate Configuration</h3>
                <p class="text-muted leading-relaxed text-sm">
                    Configure gates with custom dimensions, hardware, and installation requirements
                </p>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="modern-section" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
    <div class="modern-container text-center">
        <h2 class="text-3xl font-bold mb-6 text-balance" style="color: white; font-size: clamp(1.875rem, 4vw, 3rem);">
            Ready to Transform Your Fencing Business?
        </h2>
        <p class="text-lg mb-8 leading-relaxed" style="color: rgba(255, 255, 255, 0.9); max-width: 700px; margin-left: auto; margin-right: auto;">
            Join hundreds of Australian fencing professionals using Fencemark to streamline their operations
        </p>
        <AuthorizeView>
            <NotAuthorized>
                <a href="MicrosoftIdentity/Account/SignIn" class="modern-btn modern-btn-lg" style="background: white; color: #667eea;">
                    Start Your Free Trial Today
                </a>
            </NotAuthorized>
            <Authorized>
                <a href="/jobs" class="modern-btn modern-btn-lg" style="background: white; color: #667eea;">
                    Get Started with Your First Job
                </a>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

