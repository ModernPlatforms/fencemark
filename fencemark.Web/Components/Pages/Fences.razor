@page "/fences"
@using fencemark.Web.Features.Fences
@using Microsoft.AspNetCore.Authorization
@inject FenceApiClient FenceClient
@inject NavigationManager Navigation
@inject Microsoft.JSInterop.IJSRuntime JSRuntime
@attribute [Authorize]

<PageTitle>Fence Types - Fencemark</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-bricks"></i> Fence Types</h2>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            <i class="bi bi-plus-circle"></i> Add Fence Type
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading fence types...</p>
        </div>
    }
    else if (fences == null || !fences.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No fence types found. Create your first fence type to get started!
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var fence in fences)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card fence-card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@fence.Name</h5>
                            <p class="card-text text-muted">@fence.Description</p>
                            <div class="fence-details">
                                <div class="detail-item">
                                    <strong>Height:</strong> @fence.HeightInFeet ft
                                </div>
                                <div class="detail-item">
                                    <strong>Material:</strong> @fence.Material
                                </div>
                                <div class="detail-item">
                                    <strong>Style:</strong> @fence.Style
                                </div>
                                <div class="detail-item price">
                                    <strong>Price:</strong> $@fence.PricePerLinearFoot.ToString("F2")/ft
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <button class="btn btn-outline-primary" @onclick="() => EditFence(fence)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-outline-danger" @onclick="() => DeleteFence(fence)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingFence?.Id == null ? "Create" : "Edit") Fence Type</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Name *</label>
                        <input type="text" class="form-control" @bind="editingFence.Name" placeholder="e.g., 6ft Privacy Fence" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" @bind="editingFence.Description" rows="3" placeholder="Detailed description of the fence type"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Height (feet) *</label>
                            <input type="number" step="0.1" class="form-control" @bind="editingFence.HeightInFeet" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Price per Linear Foot *</label>
                            <input type="number" step="0.01" class="form-control" @bind="editingFence.PricePerLinearFoot" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Material</label>
                            <select class="form-select" @bind="editingFence.Material">
                                <option value="">Select material...</option>
                                <option value="Wood">Wood</option>
                                <option value="Vinyl">Vinyl</option>
                                <option value="Chain Link">Chain Link</option>
                                <option value="Aluminum">Aluminum</option>
                                <option value="Steel">Steel</option>
                                <option value="Composite">Composite</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Style</label>
                            <select class="form-select" @bind="editingFence.Style">
                                <option value="">Select style...</option>
                                <option value="Privacy">Privacy</option>
                                <option value="Picket">Picket</option>
                                <option value="Split Rail">Split Rail</option>
                                <option value="Shadowbox">Shadowbox</option>
                                <option value="Lattice Top">Lattice Top</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveFence" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .fence-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #e0e0e0;
    }

    .fence-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .fence-details {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #e0e0e0;
    }

    .detail-item {
        margin-bottom: 8px;
        padding: 4px 0;
    }

    .detail-item.price {
        font-size: 1.1rem;
        color: #28a745;
    }
</style>

@code {
    private List<FenceTypeDto>? fences;
    private FenceTypeDto editingFence = new() { Name = "", OrganizationId = "" };
    private bool isLoading = true;
    private bool isSaving = false;
    private bool showModal = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadFences();
    }

    private async Task LoadFences()
    {
        isLoading = true;
        try
        {
            var result = await FenceClient.GetAllAsync();
            fences = result?.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading fences: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        editingFence = new FenceTypeDto { Name = "", OrganizationId = "" };
        errorMessage = null;
        showModal = true;
    }

    private void EditFence(FenceTypeDto fence)
    {
        editingFence = new FenceTypeDto
        {
            Id = fence.Id,
            Name = fence.Name,
            Description = fence.Description,
            HeightInFeet = fence.HeightInFeet,
            Material = fence.Material,
            Style = fence.Style,
            PricePerLinearFoot = fence.PricePerLinearFoot,
            OrganizationId = fence.OrganizationId
        };
        errorMessage = null;
        showModal = true;
    }

    private async Task SaveFence()
    {
        if (string.IsNullOrWhiteSpace(editingFence.Name))
        {
            errorMessage = "Name is required";
            return;
        }

        isSaving = true;
        errorMessage = null;

        try
        {
            if (string.IsNullOrEmpty(editingFence.Id))
            {
                await FenceClient.CreateAsync(editingFence);
            }
            else
            {
                await FenceClient.UpdateAsync(editingFence.Id, editingFence);
            }

            await LoadFences();
            CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving fence: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteFence(FenceTypeDto fence)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{fence.Name}'?"))
            return;

        try
        {
            await FenceClient.DeleteAsync(fence.Id);
            await LoadFences();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting fence: {ex.Message}";
        }
    }

    private void CloseModal()
    {
        showModal = false;
        editingFence = new() { Name = "", OrganizationId = "" };
        errorMessage = null;
    }
}
