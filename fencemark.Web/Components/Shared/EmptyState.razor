@* Empty state with icon, message, and optional action button *@

<div class="d-flex flex-column align-items-center justify-content-center py-5">
    <MudIcon Icon="@Icon" Size="Size.Large" Color="Color.Secondary" Class="mb-3" Style="font-size: 4rem;" />
    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2">@Title</MudText>
    @if (!string.IsNullOrEmpty(Message))
    {
        <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center" Class="mb-3">@Message</MudText>
    }
    @if (Action != null)
    {
        @Action
    }
</div>

@code {
    [Parameter]
    public string Icon { get; set; } = Icons.Material.Filled.Inbox;

    [Parameter]
    public string Title { get; set; } = "No items found";

    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public RenderFragment? Action { get; set; }
}
